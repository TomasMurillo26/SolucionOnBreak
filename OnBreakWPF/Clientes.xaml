            <DataGrid x:Name="GridClientes" Margin="-27,82,10,47" HorizontalAlignment="Center" Width="915" AutoGenerateColumns="False" Grid.ColumnSpan="2" BorderBrush="#FF0CC0DF" BorderThickness="2">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Rut" Binding="{Binding RutCliente}" />
                    <DataGridTextColumn Header="Nombre" Binding="{Binding NombreContacto}" />
                    <DataGridTextColumn Header="Razón Social" Binding="{Binding RazonSocial}" />
                    <DataGridTextColumn Header="Mail Contacto" Binding="{Binding MailContacto}" />
                    <DataGridTextColumn Header="Dirección" Binding="{Binding Direccion}" />
                    <DataGridTextColumn Header="Telefono" Binding="{Binding Telefono}" />
                    <DataGridTextColumn Header="Actividad Empresa" Binding="{Binding DescripcionActividadEmpresa}" />
                    <DataGridTextColumn Header="Tipo Empresa" Binding="{Binding DescripcionTipoEmpresa}" />
                </DataGrid.Columns>
            </DataGrid>

            <mah:Flyout x:Name="flyout" Header="Actualizar&#xD;&#xA;" Grid.Column="1" Margin="504,0,-27,0" Width="455" Grid.ColumnSpan="2" Background="Gray" Panel.ZIndex="999" FlowDirection="RightToLeft">
                <mah:Flyout.HeaderTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="750" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding}" Margin="30,0,1,0" Foreground="White"/>
                        </Grid>
                    </DataTemplate>
                </mah:Flyout.HeaderTemplate>
                <Grid Margin="0,0,0,-12" Width="724">
                    <TextBox x:Name="txtRut" Margin="32,22,535,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="Black" Background="#626774" TextAlignment="Right" FlowDirection="LeftToRight" CaretBrush="Black"/>
                    <TextBlock x:Name="txtRutMessage" Foreground="Red" Margin="32,53,535,366" />

                    <TextBox x:Name="txtNombre" Margin="262,184,305,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="Black" Background="#FFF2F2F2" TextAlignment="Right" FlowDirection="LeftToRight" CaretBrush="Black"/>
                    <TextBlock x:Name="txtNombreMessage" Foreground="Red" Margin="262,215,306,205" />

                    <TextBox x:Name="txtMail" Margin="262,22,305,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="Black" Background="#FFF2F2F2" TextAlignment="Right" FlowDirection="LeftToRight" CaretBrush="Black"/>
                    <TextBlock x:Name="txtMailMessage" Foreground="Red" Margin="262,53,305,366" />

                    <TextBox x:Name="txtDireccion" Margin="32,184,535,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="Black" Background="#FFF2F2F2" TextAlignment="Right" FlowDirection="LeftToRight" CaretBrush="Black"/>
                    <TextBlock x:Name="txtDireccionMessage" Foreground="Red" Margin="32,215,535,205" />

                    <TextBox x:Name="txtTelefono" Margin="32,101,535,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="Black" Background="#FFF2F2F2" TextAlignment="Right" FlowDirection="LeftToRight" CaretBrush="Black"/>
                    <TextBlock x:Name="txtTelefonoMessage" Foreground="Red" Margin="32,132,535,289" />

                    <TextBox x:Name="txtRazon" Margin="262,101,305,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="Black" Background="#FFF2F2F2" TextAlignment="Right" FlowDirection="LeftToRight" CaretBrush="Black"/>
                    <TextBlock x:Name="txtRazonMessage" Foreground="Red" Margin="262,132,305,289" />

                    <Label Content="Actividad empresa" Margin="262,245,305,0" VerticalAlignment="Top" RenderTransformOrigin="-0.29,-0.153" Foreground="Black" FontWeight="Bold" FontSize="15" FontFamily="Bahnschrift"/>
                    <ComboBox x:Name="cboActualizarActividadEmp" HorizontalAlignment="Left" Foreground="Black" Background="#FFF2F2F2" Margin="262,278,0,0" VerticalAlignment="Top" Width="157" SelectedIndex="-1"/>
                    <TextBlock x:Name="txtActMessage" Foreground="Red" Margin="262,309,306,113" />

                    <Label Content="Tipo empresa" Margin="32,245,535,0" VerticalAlignment="Top" RenderTransformOrigin="-0.29,-0.153" Foreground="Black"  FontWeight="Bold" FontSize="15" FontFamily="Bahnschrift" Height="29"/>
                    <ComboBox x:Name="cboActualizarTipoEmp" HorizontalAlignment="Left" Margin="32,278,0,0" Foreground="Black" VerticalAlignment="Top" Width="157" SelectedIndex="-1" Background="#FFF2F2F2"/>
                    <TextBlock x:Name="txtTipoMessage" Foreground="Red" Margin="32,309,535,113" />
                    <Button x:Name="botonActualizar" Background="#FF0CC0DF" Content="Actualizar" HorizontalAlignment="Center"  Margin="53,371,591,0" FontWeight="SemiBold"
                        VerticalAlignment="Top" Style="{StaticResource MahApps.Styles.Button.Square.Accent}" Width="80" Click="btnActualizar_Click" Padding="0" BorderThickness="0"/>
                    <Button x:Name="botonVolv"  Click="CloseFlyout"  Content="Volver al listado" HorizontalAlignment="Center"  Margin="164,371,455,0" FontWeight="SemiBold"
                        VerticalAlignment="Top" Style="{StaticResource MahApps.Styles.Button.Square.Accent}" Width="105" Background="Gray" Padding="0" BorderThickness="1"/>
                </Grid>
            </mah:Flyout>

            <TextBox x:Name="txtRut1" Margin="-23,40,772,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="26" HorizontalAlignment="Right" Width="149" Grid.ColumnSpan="2" TextChanged="txtRut1_TextChanged"/>

            <Label Content="Actividad Empresa" Margin="63,10,600,0" VerticalAlignment="Top" RenderTransformOrigin="-0.29,-0.153" Foreground="#FF0CC0DF" FontWeight="Bold" FontSize="14" Grid.Column="1" Height="29" Padding="5,5,5,3"/>
            <ComboBox x:Name ="cboActividadEmpresa"  Margin="0,40,415,0" VerticalAlignment="Top" Background="#FFD0D0D0" Grid.Column="1" HorizontalAlignment="Right" Width="144" Height="26" SelectedIndex="-1"/>

            <Label Content="Tipo Empresa" Margin="237,11,446,0" VerticalAlignment="Top" RenderTransformOrigin="-0.29,-0.153" Foreground="#FF0CC0DF" FontWeight="Bold" FontSize="14" Grid.Column="1" Height="29" Padding="5,5,5,3"/>
            <ComboBox x:Name ="cboTipoEmpresa" Margin="0,40,589,0" VerticalAlignment="Top" Background="#FFD0D0D0" Grid.Column="1" HorizontalAlignment="Right" Width="144" Height="26" SelectedIndex="-1"/>

            <Button Content="Limpiar Filtros" Grid.Column="1" Style="{StaticResource MahApps.Styles.Button.Square.Accent}" HorizontalAlignment="Center" Margin="543,40,143,0" VerticalAlignment="Top" Click="Button_Clean" Width="110" Height="26" BorderThickness="0,0,0,0" Background="Gray"/>
            <Button Content="Buscar" Grid.Column="1" Style="{StaticResource MahApps.Styles.Button.Square.Accent}" HorizontalAlignment="Center" Margin="417,40,269,0" VerticalAlignment="Top" Click="btnBuscar_Click" Width="110" Height="26" BorderThickness="0,0,0,0" Background="#FF0CC0DF"/>
            <Button x:Name="btnBack" Content="Volver" HorizontalAlignment="Left" Background="#FF0CC0DF" Margin="-27,483,0,0" Style="{StaticResource MahApps.Styles.Button.Square.Accent}" VerticalAlignment="Top" Width="75" Click="btnBack_Click" BorderThickness="0"/>
        </Grid>

    </Grid>

</mah:MetroWindow>
