        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:local="clr-namespace:OnBreakWPF"
        mc:Ignorable="d"
        Title="Clientes" Height="549" Width="1134.911"
                 
        WindowStartupLocation="CenterScreen">
    <Grid>

        <Grid.Background>
            <ImageBrush/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="28*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="79*"/>
            <ColumnDefinition Width="616*"/>
            <ColumnDefinition Width="105*"/>
        </Grid.ColumnDefinitions>

        <Image Grid.Column="2" HorizontalAlignment="Center" Height="84" Margin="0,10,0,0" 
               Source="Imagenes/Logo.png"  VerticalAlignment="Top" Width="82" Grid.RowSpan="2"/>
        <Grid Grid.ColumnSpan="3" Margin="83,-3,10,0" Grid.RowSpan="2">
            <Grid.Background>
                <ImageBrush/>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="79*"/>
                <ColumnDefinition Width="616*"/>
                <ColumnDefinition Width="105*"/>
            </Grid.ColumnDefinitions>

            <Button Content="Eliminar" Grid.Column="2" Style="{StaticResource MahApps.Styles.Button.Square.Accent}" HorizontalAlignment="Center" Margin="32,210,32,0" VerticalAlignment="Top" Click="Button_Eliminar_Click" Width="72" Height="28" BorderThickness="0,0,0,0" Background="{DynamicResource MahApps.Brushes.Control.Validation}"/>
            <Button Content="Agregar" Grid.Column="2" Style="{StaticResource MahApps.Styles.Button.Square.Accent}" HorizontalAlignment="Center" Margin="32,143,32,0" VerticalAlignment="Top" Click="Button_Click" Width="72" Height="28" BorderThickness="0,0,0,0" Background="#FF0CC0DF"/>
            <Button Content="Editar" Grid.Column="2" Style="{StaticResource MahApps.Styles.Button.Square.Accent}" HorizontalAlignment="Center" Margin="32,277,32,0" VerticalAlignment="Top" Click="Button_Editar_Click" Width="72" Height="28" BorderThickness="0,0,0,0" Background="Gray"/>

